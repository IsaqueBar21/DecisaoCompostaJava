package exercicios;


public class Doador {

	//atributos
public String nome;
public float peso;
public int idade;
public String genero;

//construtor
public Doador(String nome, float peso, int idade, String genero) {
	super();
	this.nome = nome;
	this.peso = peso;
	this.idade = idade;
	this.genero = genero;
}

//metodo
public String mostrarQuantidadeSangue() {
	if (this.idade >= 18) {
		if (this.genero.equals("masculino")) {
			return "Doar 700 gramas de Sangue";
		} else {
			return "Doar 400 gramas de Sangue";
		}
	} else {
		return "Menor de 18 anos não pode doar Sangue";
	}
}

public String mostrarDados() {
	return "Nome do doador :" + this.nome + "\nPeso: " + this.peso + "\nIdade: " + this.idade + "\nGênero: " + this.genero;
}
}
